:root {
  --bg: #e2c5c5; /* fondo gris más notorio */
  --text: #2d1b3d; /* texto oscuro para contraste */
  --muted: #8b5a8c; /* rosa púrpura para texto secundario */
  --accent: #ec4899; /* rosa vivo */
  --accent-2: #f472b6; /* rosa claro */
  --accent-3: #f9a8d4; /* rosa pastel lila */
  --soft: #f0f0f0; /* gris claro */
  --soft-2: #f3f3f3; /* gris muy claro */
  --card: #ffffff; /* tarjetas blancas */
  --card-alt: #f0f0f0; /* tarjetas alternativas gris claro */
  --shadow: 0 12px 34px rgba(236, 72, 153, 0.12);
  --border: rgba(236, 72, 153, 0.15); /* bordes más suaves */
}
* {
  box-sizing: border-box;
}
html,
body,
#root {
  height: 100%;
}
body {
  margin: 0%;
  font-family:
    Inter,
    system-ui,
    -apple-system,
    Segoe UI,
    Roboto,
    Arial,
    Noto Sans,
    "Apple Color Emoji",
    "Segoe UI Emoji";
  color: var(--text);
  background: var(--bg);
}

/* Hero más romántico con fondo blanco */
.hero {
  position: relative;
  height: 74vh;
  overflow: hidden;
  background:
    linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.9)
    ),
    url("https://images.unsplash.com/photo-1522673607200-164d1b6ce486?q=80&w=1600&auto=format&fit=crop")
      center/cover no-repeat;
  display: grid;
  place-items: center;
}
.hero__content {
  position: relative;
  text-align: center;
  animation: fadeIn 0.9s ease both;
}
.hero h1 {
  font-family: "Parisienne", "Playfair Display", serif;
  font-weight: 400;
  font-size: clamp(52px, 9vw, 112px);
  margin: 0;
  letter-spacing: 0.01em;
  background: linear-gradient(
    90deg,
    #2d1b3d,
    #8b5a8c 35%,
    #ec4899 65%,
    #f472b6
  );
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 0 6px 40px rgba(236, 72, 153, 0.3);
}
.hero__subtitle {
  margin-top: 0.6rem;
  color: var(--muted);
  letter-spacing: 0.22em;
  text-transform: uppercase;
}
/* pétalos sutiles adaptados al fondo blanco */
.hero::before,
.hero::after {
  content: "";
  position: absolute;
  border-radius: 50%;
  filter: blur(40px);
  opacity: 0.25;
  animation: float 12s ease-in-out infinite;
}
.hero::before {
  width: 460px;
  height: 460px;
  top: -120px;
  left: -140px;
  background: radial-gradient(
    circle at 30% 30%,
    rgba(244, 114, 182, 0.2),
    transparent 60%
  );
}
.hero::after {
  width: 540px;
  height: 540px;
  bottom: -170px;
  right: -180px;
  background: radial-gradient(
    circle at 70% 70%,
    rgba(139, 90, 140, 0.15),
    transparent 60%
  );
  animation-delay: 1.3s;
}
@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-14px);
  }
}
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(6px);
  }
  to {
    opacity: 1;
    transform: none;
  }
}

/* Secciones con más vida adaptadas al fondo blanco */
.section {
  padding: 80px 20px;
  max-width: 1100px;
  margin: 0 auto;
  position: relative;
}
.section--light {
  background: linear-gradient(
    180deg,
    rgba(248, 244, 248, 0.8),
    rgba(248, 244, 248, 0.4)
  );
}
.section h2 {
  font-family: "Playfair Display", serif;
  font-size: 32px;
  margin: 0 0 30px;
  position: relative;
  display: inline-block;
  letter-spacing: 0.02em;
  color: var(--text);
}
.section h2::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: -10px;
  height: 4px;
  background: linear-gradient(90deg, var(--accent), var(--accent-3));
  border-radius: 999px;
  box-shadow: 0 6px 16px rgba(236, 72, 153, 0.25);
}
.section p.lead {
  color: var(--muted);
  margin: 10px 0 0;
}

/* Separador ondulado adaptado */
.divider {
  height: 56px;
  background: url("data:image/svg+xml,%3Csvg width='1440' height='96' viewBox='0 0 1440 96' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0,56 C180,16 360,88 540,56 C720,24 900,88 1080,56 C1260,24 1440,88 1440,88 L1440,96 L0,96 Z' fill='%23f8f4f8'/%3E%3C/svg%3E")
    center/cover no-repeat;
  opacity: 0.92;
  filter: drop-shadow(0 10px 18px rgba(236, 72, 153, 0.1));
}

/* Countdown con gradiente rosa adaptado */
.countdown {
  text-align: center;
}
.countdown__label {
  color: var(--muted);
  margin-bottom: 12px;
}
.countdown__grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 14px;
}
.countdown__item {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 1),
    rgba(248, 244, 248, 0.9)
  );
  padding: 22px;
  border: 1px solid var(--border);
  border-radius: 18px;
  display: grid;
  gap: 4px;
  box-shadow: var(--shadow);
  transition:
    transform 0.2s ease,
    box-shadow 0.2s ease;
}
.countdown__item:hover {
  transform: translateY(-4px);
  box-shadow: 0 16px 38px rgba(236, 72, 153, 0.25);
}
.countdown__item span {
  font-size: 32px;
  font-weight: 800;
  background: linear-gradient(90deg, #2d1b3d, #8b5a8c, #ec4899);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}
.countdown__item small {
  color: var(--muted);
}

/* Timeline más cálido adaptado */
.timeline {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 18px;
}
.timeline li {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 1),
    rgba(248, 244, 248, 0.9)
  );
  padding: 20px;
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
}
.timeline h3 {
  margin: 0 0 8px;
  font-size: 18px;
  color: var(--text);
}
.timeline p {
  margin: 0;
  color: var(--muted);
}

/* Tarjetas de mapas con halo rosa adaptado */
.map-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}
.card {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 1),
    rgba(248, 244, 248, 0.9)
  );
  border: 1px solid var(--border);
  border-radius: 18px;
  overflow: hidden;
  display: grid;
  box-shadow: var(--shadow);
  transition:
    transform 0.2s ease,
    box-shadow 0.2s ease,
    border-color 0.2s ease;
}
.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 48px rgba(236, 72, 153, 0.2);
  border-color: var(--accent);
}
.card__body {
  padding: 18px;
  display: grid;
  gap: 8px;
}
.card__title {
  margin: 0;
  font-size: 18px;
  color: var(--text);
}
.card__meta {
  color: var(--muted);
  margin: 0;
}
.card__time {
  color: var(--accent);
  font-weight: 800;
  margin: 0;
}
.card iframe {
  width: 100%;
  height: 240px;
  border: 0;
  filter: saturate(1.02) contrast(0.98);
}

/* Formularios con acento glam adaptado */
.rsvp {
  display: grid;
  gap: 16px;
}
.rsvp .grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 16px;
}
label span,
legend {
  display: block;
  margin-bottom: 8px;
  color: var(--muted);
  font-size: 14px;
}
input,
select,
textarea {
  width: 100%;
  padding: 12px 14px;
  background: var(--soft-2);
  color: var(--text);
  border: 1px solid var(--border);
  border-radius: 14px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
}
textarea {
  min-height: 108px;
  resize: vertical;
}
button {
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  color: white;
  border: 0;
  padding: 13px 22px;
  border-radius: 999px;
  font-weight: 800;
  cursor: pointer;
  box-shadow: 0 10px 26px rgba(236, 72, 153, 0.25);
  transition:
    transform 0.15s ease,
    box-shadow 0.15s ease,
    filter 0.2s ease;
  letter-spacing: 0.02em;
}
button:hover {
  transform: translateY(-2px);
  box-shadow: 0 14px 34px rgba(236, 72, 153, 0.35);
  filter: brightness(1.07);
}
button[disabled] {
  opacity: 0.65;
  cursor: default;
  box-shadow: none;
}
.actions {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}
.link {
  color: var(--accent);
  text-decoration: none;
  font-weight: 700;
}
.link:hover {
  color: var(--accent-2);
  text-decoration: underline;
}
.success {
  color: #059669;
}
.error {
  color: #dc2626;
}

/* Bloques informativos suaves adaptados */
.info {
  background: linear-gradient(
    180deg,
    rgba(248, 244, 248, 0.8),
    rgba(248, 244, 248, 0.4)
  );
  border: 1px solid var(--border);
  color: var(--text);
  padding: 18px;
  border-radius: 16px;
  box-shadow: var(--shadow);
}
.badge {
  display: inline-block;
  padding: 5px 12px;
  border-radius: 999px;
  background: rgba(236, 72, 153, 0.15);
  color: var(--accent);
  font-size: 12px;
  font-weight: 800;
  letter-spacing: 0.05em;
}

/* Galería con brillo adaptada */
.gallery {
}
.gallery__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 14px;
}
.gallery__item {
  overflow: hidden;
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
}
.gallery__item img {
  display: block;
  width: 100%;
  height: 200px;
  object-fit: cover;
  transition:
    transform 0.6s ease,
    filter 0.6s ease;
  filter: saturate(1.06) contrast(0.98) brightness(1);
}
.gallery__item:hover img {
  transform: scale(1.07);
  filter: saturate(1.08) brightness(1.05);
}

/* Carrusel de galería adaptado */
.gallery__carousel {
  position: relative;
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 20px;
  box-shadow: 0 20px 50px rgba(236, 72, 153, 0.15);
  background: var(--card);
  border: 1px solid var(--border);
}

.gallery__carousel-track {
  display: flex;
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
}

.gallery__carousel-slide {
  min-width: 100%;
  height: 500px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--card), var(--card-alt));
  padding: 20px;
  box-sizing: border-box;
}

.gallery__carousel-slide img {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  object-position: center;
  display: block;
  filter: brightness(1.02) contrast(1.05) saturate(1.1);
  transition: filter 0.3s ease;
  border-radius: 12px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.gallery__carousel-slide:hover img {
  filter: brightness(1.05) contrast(1.08) saturate(1.15);
  transform: scale(1.02);
}

/* Loading state para imágenes */
.gallery__carousel-slide img[loading="lazy"] {
  background: linear-gradient(
    90deg,
    rgba(248, 244, 248, 0.8) 25%,
    rgba(236, 72, 153, 0.1) 50%,
    rgba(248, 244, 248, 0.8) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.gallery__indicators {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 8px;
  z-index: 10;
  background: rgba(255, 255, 255, 0.9);
  padding: 8px 16px;
  border-radius: 20px;
  backdrop-filter: blur(10px);
  border: 1px solid var(--border);
}

.gallery__indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid rgba(139, 90, 140, 0.6);
  background: transparent;
  cursor: pointer;
  transition: all 0.3s ease;
}

.gallery__indicator:hover {
  border-color: var(--accent);
  transform: scale(1.1);
}

.gallery__indicator.active {
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  border-color: var(--accent);
  box-shadow: 0 0 15px rgba(236, 72, 153, 0.4);
}

/* Controles de navegación adaptados */
.gallery__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid var(--border);
  color: var(--text);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  z-index: 10;
}

.gallery__nav:hover {
  background: rgba(236, 72, 153, 0.1);
  border-color: var(--accent);
  transform: translateY(-50%) scale(1.1);
}

.gallery__nav--prev {
  left: 15px;
}

.gallery__nav--next {
  right: 15px;
}

.gallery__nav svg {
  width: 20px;
  height: 20px;
  fill: currentColor;
}

/* Modal adaptado */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(45, 27, 61, 0.6);
  display: grid;
  place-items: center;
  z-index: 50;
}
.modal {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 1),
    rgba(248, 244, 248, 0.9)
  );
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 24px;
  width: min(520px, 92%);
  box-shadow: var(--shadow);
  text-align: center;
}
.modal h3 {
  margin: 0 0 8px;
  font-family: "Playfair Display", serif;
  font-size: 24px;
  color: var(--text);
}
.modal p {
  margin: 0 0 16px;
  color: var(--muted);
}

/* Confetti (container) */
.confetti-container {
  position: fixed;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 60;
}
.confetti-piece {
  position: absolute;
  width: 10px;
  height: 14px;
  opacity: 0.9;
  will-change: transform;
  border-radius: 2px;
}
@keyframes confettiFall {
  0% {
    transform: translateY(-10vh) rotate(0deg);
  }
  100% {
    transform: translateY(110vh) rotate(720deg);
  }
}

/* Footer adaptado */
.footer {
  text-align: center;
  padding: 60px 20px;
  color: var(--muted);
}

/* Responsive para el carrusel */
@media (max-width: 768px) {
  .gallery__carousel {
    max-width: 100%;
    border-radius: 16px;
  }

  .gallery__carousel-slide {
    height: 400px;
    padding: 15px;
  }

  .gallery__indicators {
    bottom: 15px;
    padding: 6px 12px;
  }

  .gallery__indicator {
    width: 10px;
    height: 10px;
  }

  .gallery__nav {
    width: 35px;
    height: 35px;
  }

  .gallery__nav svg {
    width: 16px;
    height: 16px;
  }
}

@media (max-width: 480px) {
  .gallery__carousel-slide {
    height: 320px;
    padding: 10px;
  }
}

@media (max-width: 680px) {
  .hero {
    height: 64vh;
  }
  .countdown__grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}
